{
  "name": "@cspark/wasm",
  "version": "0.2.0",
  "description": "A JavaScript SDK for interacting with the Hybrid Runner API",
  "author": "Coherent (https://coherent.global)",
  "homepage": "https://docs.coherent.global",
  "license": "Apache-2.0",
  "keywords": [
    "coherent",
    "spark",
    "sdk",
    "hybrid",
    "runner",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Coherent-Partners/spark-ts-sdk.git",
    "directory": "packages/wasm"
  },
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.mjs",
  "types": "./lib/types.d.ts",
  "browser": "./lib/bundle.js",
  "files": [
    "lib"
  ],
  "engines": {
    "node": "^14.15.0 || >=16.0.0"
  },
  "scripts": {
    "start": "echo '>>> no start command specified' && exit 0",
    "format": "prettier --write '{src,test,examples}/**/*.ts' --config ../../.prettierrc",
    "lint": "eslint '{src,test}/**/*.ts' --fix",
    "test": "jest",
    "prebuild": "shx rm -rf lib",
    "build": "tsc && rollup -c",
    "clean": "shx rm -rf build coverage lib",
    "demo": "tsx examples/index.ts"
  },
  "lint-staged": {
    "*.ts": "eslint '{src,test}/**/*.ts' --cache --fix",
    "*.{md,ts,json,yml}": "prettier -u --write '{src,test,examples,docs}/**/*' --config ../../.prettierrc"
  },
  "peerDependencies": {
    "@cspark/sdk": "^0.2.8"
  },
  "devDependencies": {
    "@cspark/sdk": "^0.2.8",
    "@eslint/js": "^9.35.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/jest": "^29.5.1",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rollup": "^4.4.0",
    "rollup-plugin-dts": "^6.1.1",
    "shx": "^0.4.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.7.0",
    "tsx": "^4.20.5",
    "typescript": "~5.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "coverageDirectory": "coverage",
    "clearMocks": true,
    "transform": {
      "^.+.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.dev.json"
        }
      ]
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/utils.ts"
    ]
  }
}
